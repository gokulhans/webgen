<form class="flex flex-col max-w-md shadow-lg bg-grey-300 p-5 rounded-xl" action="/addform" method="post">
    <center class="m-5 font-bold text-lg"> Forms Generater </center>
    <div class="flex flex-col ">
        <input class="p-2 my-1 border" type="text" name="name" value="" placeholder="Form name...">
    </div>
    <div><button class="my-2 p-2 font-bold text-md border bg-green text-green-600 " type="submit">Submit</button></div>

</form>

<pre><code>

{{#each data}}
<label for="">{{this.name}}</label>
           <input class="p-2 my-1 border" type="text" name="name" value="" placeholder="Form name...">

{{/each}}

</code></pre>